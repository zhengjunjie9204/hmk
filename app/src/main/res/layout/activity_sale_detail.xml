    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_color"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        >
            <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_member_type"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:text="张勇"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_card"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:text="13688768833"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <LinearLayout
            android:id="@+id/ll_contant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_card"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="粤A5678"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="2015-08-19 14:33:43"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:textSize="12sp" />

        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EFEFEF" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="项目信息"
            />
        <ListView
            android:id="@+id/lv_data"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:listitem="@layout/item_sale_detail"
            android:divider="@null"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:listSelector="@drawable/button_selector_bg">
        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="商品信息"
            />
        <ListView
            android:id="@+id/lv_data2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_sale_detail"
            android:divider="@null"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:listSelector="@drawable/button_selector_bg">
        </ListView>


    </LinearLayout>

</LinearLayout>