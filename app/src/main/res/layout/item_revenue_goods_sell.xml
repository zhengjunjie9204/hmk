<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:ignore="UselessParent">

        <com.xgx.syzj.widget.CircleImageView
            android:id="@+id/item_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="10dp"
            android:src="@mipmap/pic"/>

        <LinearLayout
            android:layout_toRightOf="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="3D坐垫"
                android:textColor="@color/title_3_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/lock_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_toRightOf="@+id/lock_money"
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:layout_centerVertical="true"
                    android:text="35.0"
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/et_time"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/item_tv_unit"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/meetting_edittext_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:selectAllOnFocus="true"
                    android:text="1"
                    android:textColor="@color/title_3_color"/>

                <TextView
                    android:id="@+id/item_tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/tv_money"
                    android:text="工时"
                    android:textSize="13sp"
                    android:textColor="@color/title_3_color"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>