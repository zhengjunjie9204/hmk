<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="时间"
                android:textColor="@color/title_6_color"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_mintime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@mipmap/right_tw"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/title_3_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:minWidth="30dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:text="——"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_maxtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableRight="@mipmap/right_tw"
                android:gravity="center"
                android:onClick="onClick2"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/title_3_color"
                android:textSize="14sp" />

        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_marginLeft="30dp" />





        <include
            layout="@layout/layout_line"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="金额范围"
                android:textColor="@color/title_6_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_minmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:selectAllOnFocus="true"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:minWidth="30dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:text="——"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_maxmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:selectAllOnFocus="true"
                android:background="@null"
                android:inputType="numberDecimal"
                android:maxLength="20"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

        <include
            layout="@layout/layout_line"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_marginLeft="30dp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_login_bg"
        android:onClick="onAddSure"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text=" 确定 "
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>