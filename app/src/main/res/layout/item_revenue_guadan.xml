<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp"
        android:background="@color/white">
        <com.xgx.syzj.widget.CircleImageView
            android:id="@+id/iv_goods"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@mipmap/pic"/>

        <TextView
            android:id="@+id/tv_name_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods"
            android:textColor="@color/title_6_color"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:text="桌号："/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name_hint"
            android:textColor="@color/title_3_color"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:text="100"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/right_tw"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_below="@id/tv_num"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:textColor="@color/title_3_color"
                android:text="吴勇"/>

            <TextView
                android:id="@+id/tv_goods"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/title_3_color"
                android:text="水壶"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="￥7000.00"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_below="@id/ll_one"
            android:layout_toRightOf="@id/iv_goods"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:textColor="@color/title_6_color"
                android:text="会员名"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="10sp"
                android:textColor="@color/title_6_color"
                android:text="消费项目"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="10sp"
                android:textColor="@color/title_6_color"
                android:text="消费金额"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>