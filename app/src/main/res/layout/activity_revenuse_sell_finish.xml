<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:background="@color/appBG"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/btn_green"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="合计金额：￥70.00"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4389D8"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/app_button_save"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:drawableLeft="@mipmap/asix"
                    android:drawablePadding="10dp"
                    android:text="当前里程数:"/>

                <EditText
                    android:selectAllOnFocus="true"
                    android:digits="1234567890"
                    android:id="@+id/et_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="1235.2"
                    android:textColor="@color/gray"
                    android:background="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="km"
                    />

            </LinearLayout>


            <include layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>
            <LinearLayout
                android:id="@+id/ll_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:onClick="onGoodsAddSell"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@mipmap/afive"
                    android:drawableRight="@mipmap/right_tw"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="请选择项目"/>

            </LinearLayout>
            <include layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>

            <com.xgx.syzj.widget.ListViewExtend
                android:id="@+id/lv_project"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:listSelector="@drawable/button_selector_bg"
                tools:listitem="@layout/item_revenue_goods_sell"/>

            <include layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="计次卡剩余次数："/>

            </LinearLayout>



            <include layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginLeft="30dp"/>

            <com.xgx.syzj.widget.ListViewExtend
                android:id="@+id/sell_listview"
                android:paddingLeft="30dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <include layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"/>

            <LinearLayout
                android:id="@+id/ll_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:onClick="onGoodsClick"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@mipmap/aone"
                    android:drawableRight="@mipmap/right_tw"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="请选择商品"/>

            </LinearLayout>

            <include layout="@layout/layout_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <com.xgx.syzj.widget.ListViewExtend
                android:id="@+id/lv_data"
                android:paddingLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:background="@color/white"
                android:listSelector="@drawable/button_selector_bg"
                tools:listitem="@layout/item_revenue_goods_sell"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
