<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="全车镀晶"
            android:textColor="@color/title_3_color" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxWidth="80dp"
            android:layout_centerInParent="true"
            android:text="35.0"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/tv_money"
            android:layout_centerInParent="true"
            android:text="￥"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <CheckBox
            android:button="@null"
            android:layout_width="24dp"
            android:background="@drawable/checkbox_light"
            android:layout_height="24dp"
            android:id="@+id/cb_wash"
            style="@style/checkbox_sell"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:focusable="false"
            android:checked="false"/>

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/cb_wash"
            android:text="次"/>

        <TextView
            android:id="@+id/et_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_title1"
            android:layout_centerVertical="true"
            android:selectAllOnFocus="true"
            android:background="@mipmap/meetting_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:padding="5dp"
            android:textColor="@color/title_3_color" />

    </RelativeLayout>
</LinearLayout>
